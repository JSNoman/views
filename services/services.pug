extends ../layout 


block content 

    style.
        body{ background-image: linear-gradient(180deg, #f400ff, #0039f1); min-height: 81vh;}

    .container-fluid(style='margin-top: 120px;')
        .row.d-flex.justify-content-center.align-items-center
            .col-md-6
                if errorMessage
                    .alert.alert-warning.alert-dismissible.fade.show.mx-auto.rounded-0(role='alert' style=' border-left: 5px solid red; ')
                        span.lead= errorMessage
                        button.btn-close(type='button', data-bs-dismiss='alert', aria-label='Close')

                if deleteMessage
                    .alert.alert-dismissible.fade.show.mx-auto.alert-danger.rounded-0.shadow(role='alert' style=' border-left: 5px solid red; ')
                        span.lead= deleteMessage
                        button.btn-close(type='button', data-bs-dismiss='alert', aria-label='Close')
                        
                if message
                    .alert.alert-info.alert-dismissible.fade.show.mx-auto.rounded-0(role='alert' style=' border-left: 5px solid #0DCAF0; ')
                        span.lead= message
                        button.btn-close(type='button', data-bs-dismiss='alert', aria-label='Close')

    .container-fluid.px-4
        .card.text-bg-white.shadow.mb-4
            .card-header.position-relative
                span.lead.position-absolute.top-50.start-50.translate-middle.fw-bold MY SERVICES
                button.btn.btn-outline-dark.float-start.rounded-0(style='border-left-color: #FC004D; border-right-color: #FC004D; border-width: 2px;' type='button' data-bs-toggle='modal' data-bs-target='#exampleModal' data-bs-whatever='@getbootstrap').i.fa-solid.fa-plus.fa-2xl.fw-bold.text-capitalize  New
                #exampleModal.modal.fade(tabindex='-1' aria-labelledby='exampleModalLabel' aria-hidden='true')
                    .modal-dialog.modal-lg
                        .modal-content
                            .modal-header
                                h1#exampleModalLabel.modal-title.fs-5 New message
                                button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
                            .modal-body
                                form(action="/admin/services" method="post" enctype="multipart/form-data" style='')

                                    .row 
                                        .col-12
                                            .form-outline.mb-3(data-mdb-input-init='')
                                                input#formControlLg.form-control.form-control-lg(type='text' name='heading')
                                                label.form-label(for='') Heading
                                     
                                        .col-12
                                            .mb-3(data-mdb-input-init='')
                                                label.mb-1(for="") Upload image
                                                input#formFileLg.form-control.form-control-md(type='file' name='image')

                                    .form-outline.mb-3(data-mdb-input-init='')
                                        textarea#textAreaExample.form-control(rows='4' name='message')
                                        label.form-label(for='') Message
                                        
                                    button.submit(type="submit") 
                                        i.fa-solid.fa-arrow-up 
                                        |  Post    
                                    
            .card-body
                .table-responsive.px-1
                    table#example.table.table-hover.table-bordered.table-sm(style='width:100%')
                        thead
                            tr
                                th.text-center ID
                                th.text-center Heading
                                th.text-center Message
                                th.text-center Image 
                                th.text-center Actions
                        tbody
                            each noman in services
                                tr
                                    td.text-center=noman.id
                                    td.w-25=noman.heading.substring(0,50)
                                    td.w-25=noman.message.substring(0,50)

                                    td.w-25
                                        img.img-fluid.rounded-circle.my-3.mx-auto.d-block(src=`/uploads/${noman.image}`, alt="image" style='width: 70px; height: 70px;')
                                        
                                    td
                                        .d-grid.gap-2.d-md-flex.justify-content-md-center
                                            a.btn.btn-outline-success.btn-sm(href=`/admin/servicesEdit/${noman.id}`)
                                                i.fa-solid.fa-eye
                                                
                                            a.btn.btn-outline-primary.btn-sm(href=`/admin/servicesEdit/${noman.id}`)
                                                i.fa-solid.fa-pen-to-square

                                            a.btn.btn-outline-danger.btn-sm(href=`/admin/services/delete/${noman.id}`) 
                                                i.fa-solid.fa-trash
                        tfoot
                            tr
                                th.text-center ID
                                th.text-center Heading
                                th.text-center Message
                                th.text-center Image 
                                th.text-center Actions


